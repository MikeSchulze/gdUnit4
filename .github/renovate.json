{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Godot matrix version and status",
      "managerFilePatterns": [
        "/^\\.github/workflows/ci-pr\\.yml$/"
      ],
      "matchStrings": [
        "\\s*- godot-version: '(?<godotVersion>[0-9.]+)'\\s*\\n\\s*godot-status: '(?<godotStatus>\\w+)'"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "godotengine/godot-builds",
      "versioningTemplate": "regex:^(?<major>[0-9]+)\\.(?<minor>[0-9]+)-(?<prerelease>.+)$",
      "currentValueTemplate": "{{godotVersion}}-{{godotStatus}}",
      "autoReplaceStringTemplate": "          - godot-version: '{{newMajor}}.{{newMinor}}'\\n            godot-status: '{{newPrerelease}}'"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "godotengine/godot-builds"
      ],
      "groupName": "Godot Engine",
      "commitMessageTopic": "Godot Engine",
      "commitMessageExtra": "{{currentValue}} â†’ {{newValue}} ({{updateType}})",
      "automerge": false,
      "minimumReleaseAge": "12 hours",
      "labels": [
        "godot",
        "ci",
        "prerelease"
      ]
    }
  ]
}
