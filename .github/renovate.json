{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Test Godot datasource with simple pattern",
      "managerFilePatterns": [
        "/^\\.github/workflows/ci-pr\\.yml$/"
      ],
      "matchStrings": [
        "GODOT_VERSION:\\s*(?<currentValue>[0-9.]{2,5}-\\w+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "godotengine/godot-builds",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "godotengine/godot-builds"
      ],
      "groupName": "Godot Engine",
      "commitMessageTopic": "Godot Engine",
      "commitMessageExtra": "{{currentValue}} â†’ {{newValue}} ({{updateType}})",
      "automerge": false,
      "minimumReleaseAge": "12 hours",
      "labels": [
        "godot",
        "ci",
        "prerelease"
      ]
    }
  ]
}
