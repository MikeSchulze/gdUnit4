{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":ignoreUnstable"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Test Godot datasource with simple pattern",
      "fileMatch": [
        "^\\.github/workflows/ci-pr\\.yml$"
      ],
      "matchStrings": [
        "GODOT_VERSION:\\s*(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "godotengine/godot-builds"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "godotengine/godot-builds"
      ],
      "ignoreUnstable": "false",
      "respectLatest": "false",
      "groupName": "Godot Engine",
      "commitMessageTopic": "Godot Engine",
      "automerge": false,
      "minimumReleaseAge": "12 hours",
      "labels": [
        "godot",
        "ci",
        "prerelease"
      ]
    }
  ]
}
