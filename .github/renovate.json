{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assigneesFromCodeOwners": false,
  "reviewersFromCodeOwners": false,
  "assignees": [
    "renovate[bot]"
  ],
  "reviewers": [
    "MikeSchulze"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "üéÆ Godot CI Dependencies Dashboard",
  "dependencyDashboardHeader": "This dashboard tracks Godot Engine and CI dependency updates.\n\n- üéÆ **Godot versions** are automatically updated from GitHub releases\n- üìÖ **Updates run** every Monday morning\n- üß™ **Testing** is required before merging major updates",
  "prCreation": "not-pending",
  "prConcurrentLimit": 3,
  "branchConcurrentLimit": 5,
  "commitMessagePrefix": "ü§ñ",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Godot matrix version and status",
      "managerFilePatterns": [
        "/^\\.github/workflows/ci-pr\\.yml$/",
        "/^\\.github/workflows/ci-pr-publish-report\\.yml$/"
      ],
      "matchStrings": [
        "(?<fullMatch>(?<indentation>\\s*)- godot-version: '(?<godotVersion>[0-9.]+)'\\s*\\n\\s*godot-status: '(?<godotStatus>\\w+)')"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "godotengine/godot-builds",
      "currentValueTemplate": "{{godotVersion}}-{{godotStatus}}",
      "autoReplaceStringTemplate": "{{indentation}}- godot-version: '{{replace '^(\\d+)\\.(\\d+).*' '$1.$2' newValue}}'{{indentation}}  godot-status: '{{replace '^\\d+\\.\\d+-(\\w+\\d*).*' '$1' newValue}}'"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "godotengine/godot-builds"
      ],
      "versioning": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?-(?<prerelease>.*)?$",
      "groupName": "Godot Engine",
      "commitMessageTopic": "Godot Engine",
      "commitMessageExtra": "{{currentValue}} ‚Üí {{newValue}} ({{updateType}})",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "minimumReleaseAge": "12 hours",
      "labels": [
        "godot-prerelease",
        "ci"
      ],
      "prBodyTemplate": "This PR updates Godot Engine prerelease version in CI workflows.\n\n## üîç Release Information\n{{#if hasReleaseNotes}}{{releaseNotes}}{{else}}Check the [Godot builds release page](https://github.com/godotengine/godot-builds/releases/tag/{{newVersion}}) for details.{{/if}}\n\n---\n*Prerelease update by Renovate ü§ñ*"
    }
  ]
}
