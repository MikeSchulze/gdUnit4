{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/workflows/ci-pr\\.yml$"],
      "matchStrings": ["GODOT_VERSION:\\s*(?<currentValue>[0-9.]+)"],
      "datasourceTemplate": "npm",
      "depNameTemplate": "lodash"
    }
  ]
}
